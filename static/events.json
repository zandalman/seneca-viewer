{
  "ordering": "alphabetical",
  "devices": ["DDS", "DAC", "ADC", "TTL", "SCRIPT"],
  "events": {
    "set_frequency": {
      "abbreviation": "FRQ",
      "devices": ["DDS"],
      "params": {
        "frequency": {
          "type": "float",
          "unit": "Hz"
        }
      }
    },
    "collect_data": {
      "abbreviation": "CDT",
      "devices": ["SCRIPT"],
      "params": {
        "location_name": {
          "type": "string",
          "unit": ""
        },
        "data_name": {
          "type": "string",
          "unit": ""
        }
      }
    },
    "ramp_frequency": {
      "abbreviation": "RFQ",
      "devices": ["DDS"],
      "params": {
        "frequency_per_step": {
          "type": "float",
          "unit": "Hz"
        },
        "amplitude": {
          "type": "float",
          "unit": "V"
        },
        "steps": {
          "type": "int",
          "unit": ""
        },
        "time_per_step": {
          "type": "float",
          "unit": "s"
        }
      }
    },
    "power": {
      "abbreviation": "POW",
      "devices": ["DDS", "DAC"],
      "params": {
        "on": {
          "type": "boolean",
          "unit": ""
        }
      }
    },
    "RF_power": {
      "abbreviation": "RPW",
      "devices": ["DDS"],
      "params": {
        "on": {
          "type": "boolean",
          "unit": ""
        }
      }
    },
    "set_voltage": {
      "abbreviation": "VLT",
      "devices": ["DAC"],
      "params": {
        "voltage": {
          "type": "float",
          "unit": "V"
        }
      }
    },
    "ramp": {
      "abbreviation": "RMP",
      "devices": ["DAC"],
      "params": {
        "volts_per_step": {
          "type": "float",
          "unit": "V"
        },
        "steps": {
          "type": "int",
          "unit": ""
        },
        "time_per_step": {
          "type": "float",
          "unit": "s"
        }
      }
    },
    "acquire_once": {
      "abbreviation": "AQO",
      "devices": ["ADC"],
      "params": {
        "duration": {
          "type": "float",
          "unit": "s"
        },
        "data_name": {
          "type": "string",
          "unit": ""
        }
      }
    },
    "acquire_continuous": {
      "abbreviation": "AQC",
      "devices": ["ADC"],
      "params": {
        "steps": {
          "type": "int",
          "unit": ""
        },
        "time_per_step": {
          "type": "float",
          "unit": "s"
        },
        "data_name": {
          "type": "string",
          "unit": ""
        }
      }
    },
    "single_pulse": {
      "abbreviation": "SPL",
      "devices": ["TTL"],
      "params": {
        "duration": {
          "type": "float",
          "unit": "s"
        },
        "delay": {
          "type": "float",
          "unit": "s"
        },
        "duty cycle": {
          "type": "float",
          "unit": "s"
        }
      }
    },
    "logic": {
      "abbreviation": "LOG",
      "devices": ["TTL"],
      "params": {
        "high": {
          "type": "boolean",
          "unit": ""
        }
      }
    },
    "pulse_train": {
      "abbreviation": "PLT",
      "devices": ["TTL"],
      "params": {
        "duration": {
          "type": "float",
          "unit": "s"
        },
        "delay": {
          "type": "float",
          "unit": "s"
        },
        "number_of_pulses": {
          "type": "int",
          "unit": ""
        }
      }
    }
  }
}
